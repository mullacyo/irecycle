<h1>Login</h1>
<div class = "container col-md-10 text-center">
  <%= form_tag sessions_path do |form| %>
    <div class=”field”>
      <%= label_tag :email %>
      <%= text_field_tag :email, "", class: 'form-control' %>
    </div>

    <div class=”field”>
      <%= label_tag :password %>
      <%= password_field_tag :password, "", class: 'form-control'%>
    </div>
    <br>
    <div class=”actions”>
      <%= submit_tag "Login", :class => 'btn btn-outline-success my-2 my-sm-0 form-control' %>
    </div>
  <% end %>
  Don't have an account? Click <%= link_to "here", new_user_path %> to register now!
</div>