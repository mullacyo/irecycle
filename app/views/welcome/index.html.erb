<div id="carouselExampleControls" class="carousel slide" data-ride="carousel" data-interval="5000">
  <div class="carousel-inner" >    
    <div class="carousel-item active">
      <img src="background0.jpg">
      <div class="carousel-caption">
          <h1 class="display-2 glow">iRecycle</h1>
          <h3 class="glow">Turn your recyclable goods into rewards!</h3>
          <% if current_user %>
          <% else %>
              <%= link_to "Log In", login_path, :class => "btn btn-success btn-lg" %>
              <%= link_to "Register", new_user_path, :class => "btn btn-primary btn-lg" %>
          <%end%>
      </div>
    </div>
    <div class="carousel-item">
      <img src="background1.jpg">
      <div class="carousel-caption">
          <h1 class="display-2 glow">iRecycle</h1>
          <h3 class="glow">Compete against your friends!</h3>
          <button type="submit" class="btn btn-success btn-lg">Log In</button>
          <button type="submit" class="btn btn-primary btn-lg">Register</button>
      </div>
    </div>
    <div class="carousel-item">
      <img src="background2.jpg">
      <div class="carousel-caption">
          <h1 class="display-2 glow">iRecycle</h1>
          <h3 class="glow">Create sustainable environments!</h3>
          <button type="submit" class="btn btn-success btn-lg">Log In</button>
          <button type="submit" class="btn btn-primary btn-lg">Register</button>
      </div>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon glow" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon glow" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

